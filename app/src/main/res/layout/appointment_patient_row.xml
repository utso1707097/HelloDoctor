<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:id="@+id/appointmentPatientLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="11dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:background="#c6f492"
                    android:scaleType="centerCrop"
                    android:contentDescription="Patient image"
                    android:id="@+id/docImage"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/docName"
                        android:layout_marginBottom="10dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/showMyText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="wants an appointment from you,Sir"
                        android:layout_marginBottom="10dp"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/showDoctorUid"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_200"
                android:id="@+id/btnPayment"
                android:text="payment"
                android:textSize="20sp"
                android:visibility="gone"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>